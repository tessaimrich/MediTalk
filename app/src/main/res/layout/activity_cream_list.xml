<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootCreamList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!--  Icon + Titel -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivCreamsIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/cream_oinments"
            android:contentDescription="@string/creams_oin_button" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/salben"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>



    <!-- Freiraum oberhalb der Liste -->
    <Space
        android:id="@+id/spaceTop"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/header" />


    <!-- ListView -->
    <ListView
        android:id="@+id/lvCreams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spaceTop"
        android:layout_above="@+id/spaceBottom"
        android:dividerHeight="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />


    <!-- Freiraum unterhalb der Liste -->
    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_above="@id/bottomBar" />


    <!-- Menu-Bar mit Home und Weiter (mit Text darunter) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        android:weightSum="2">

        <!-- Home-Button mit Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/home_button_"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Weiter-Button mit Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/_arrow_forward_1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/weiter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weiter"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
