<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootPillList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:padding="16dp">

<!-- Navigation-Drawer-Icon -->
    <ImageButton
        android:id="@+id/btnDrawer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/menu_for_navigationdrawer"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/nav_drawer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

<!-- 2) Icon + Titel -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/btnDrawer"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivPillIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/pill_"
            android:contentDescription="@string/pill_icon" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="PILLEN"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>



<!-- Freiraum oberhalb der Liste -->
    <Space
        android:id="@+id/spaceTop"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/header" />


<!-- ListView -->
    <ListView
        android:id="@+id/lvPills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spaceTop"
        android:layout_above="@+id/spaceBottom"
        android:dividerHeight="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />


<!-- Freiraum unterhalb der Liste -->
    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_above="@id/bottomBar" />


<!-- 4) Menu-Bar mit Home und Weiter -->
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="8dp">


<!-- Home-Button -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/home_button_"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/home"
            android:layout_centerHorizontal="true"/>

<!-- Weiter-Button -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/_arrow_forward_1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/weiter"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>
